{
  "name": "@seneca/repl",
  "description": "Provides a client and server REPL for Seneca microservice systems.",
  "version": "1.5.1",
  "main": "repl.js",
  "license": "MIT",
  "author": "Richard Rodger (https://github.com/rjrodger)",
  "contributors": [
    "Mihai Dima (https://github.com/mihaidma)",
    "Emer Rutherford (https://github.com/eeswr)",
    "Richard Rodger (https://github.com/rjrodger)",
    "Wyatt Preul (https://github.com/geek)",
    "Shane Lacey (https://github.com/shanel262)",
    "Dean McDonnell (https://github.com/mcdonnelldean)"
  ],
  "bin": {
    "seneca-repl": "./bin/seneca-repl-exec.js"
  },
  "scripts": {
    "test": "lab -P test -v -t 70",
    "coveralls": "lab -s -P test -r lcov | coveralls",
    "coverage": "lab -v -P test -t 70 -r html > coverage.html",
    "prettier": "prettier --write --no-semi --single-quote entity.js lib/*.js test/*.js",
    "clean-npm": "rm -rf node_modules package-lock.json",
    "repo-tag": "REPO_VERSION=`node -e \"console.log(require('./package').version)\"` && echo TAG: v$REPO_VERSION && git commit -a -m v$REPO_VERSION && git push && git tag v$REPO_VERSION && git push --tags;",
    "repo-publish": "npm run prettier && npm test && npm run repo-tag && npm publish  --access public --registry=http://registry.npmjs.org"
  },
  "keywords": [
    "seneca",
    "plugin",
    "repl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/senecajs/seneca-repl.git"
  },
  "dependencies": {
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "@hapi/code": "^6.0.0",
    "@hapi/joi": "^15.1.1",
    "@hapi/lab": "^20.2.2",
    "acorn": "^7.0.0",
    "async": "^3.1.0",
    "coveralls": "^3.0.6",
    "gex": "^0.3.0",
    "prettier": "^1.18.2",
    "seneca": "plugin",
    "seneca-entity": "^5.1.2",
    "seneca-mem-store": "^1.6.0",
    "seneca-plugin-validator": "0.3.0",
    "seneca-promisify": "^1.1.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "repl.js",
    "bin/seneca-repl-exec.js"
  ]
}
